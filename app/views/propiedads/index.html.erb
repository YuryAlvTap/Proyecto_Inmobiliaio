
<br>
<h5>Propiedades</h5>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="text-right">Recinto</th>
        <th class="text-right">Dirección</th>
        <th class="text-right">Número</th>
        <th class="text-right">Departamento</th>
        <th class="text-right">Rol</th>
        <th class="text-right">Mt</th>
        <th class="text-right">Coeficiente</th>
        <th class="text-right">Tipo propiedad</th>
        <th class="text-right">Torre</th>
        <th colspan="3"></th>
      </tr>

    </thead>
    <tbody>
      <% @propiedads.each do |propiedad| %>
        <tr>
          <td class="text-right"><%= propiedad.recinto.tipo_propiedad.name %></td>
          <td class="text-right"><%= propiedad.direccion %></td>
          <td class="text-right"><%= propiedad.numero %></td>
          <td class="text-right"><%= propiedad.departamento %></td>
          <td class="text-right"><%= propiedad.rol %></td>
          <td class="text-right"><%= propiedad.mt %></td>
          <td class="text-right"><%= propiedad.coeficiente %></td>
          <td class="text-right"><%= propiedad.tipo_propiedad %></td>
          <td class="text-right"><%= propiedad.torre %></td>
          <td><%= link_to 'Mostrar', propiedad, class:'btn btn-outline-success btn-sm'  %></td>
          <% if can?(:edit, propiedad) %>
            <td><%= link_to 'Editar', edit_propiedad_path(propiedad), class:'btn btn-outline-warning btn-sm' %></td>
          <% end %>
          <% if can?(:destroy, propiedad) %>
            <td><%= link_to 'Borrar', propiedad, method: :delete, data: { confirm: 'Estás Seguro?' }, class:'btn btn-outline-danger btn-sm' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to 'Nueva Propiedad', new_propiedad_path, class:'btn btn-outline-primary btn-sm' %>

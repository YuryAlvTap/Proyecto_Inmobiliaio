
<h5>Recintos</h5>

<table>
  <thead>
    <tr>
      <th>Recinto</th>
      <th>Nombre</th>
      <th>Dirección</th>
      <th>Número</th>
      <th>Comuna</th>
      <th>Ciudad</th>
      <th>Región</th>
      <th>País</th>
      <th>Ubicación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recintos.each do |recinto| %>
      <tr>
        <td><%= recinto.tipo_propiedad.name %></td>
        <td><%= recinto.nombre %></td>
        <td><%= recinto.direccion_recinto %></td>
        <td><%= recinto.numero_recinto %></td>
        <td><%= recinto.comuna_recinto %></td>
        <td><%= recinto.ciudad_recinto %></td>
        <td><%= recinto.region_recinto %></td>
        <td><%= recinto.pais_recinto %></td>

        <td><%= link_to 'Mostrar', recinto %></td>

        <% if can?(:edit, recinto) %>
          <td><%= link_to 'Editar', edit_recinto_path(recinto) %></td>
        <% end %>
        <% if can?(:destroy, recinto) %>
          <td><%= link_to 'Borrar', recinto, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can?(:create, @recinto) %>
<%= link_to 'Nuevo Recinto', new_recinto_path %>
<% end %>
